{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "hardhat.config.js",
        "scripts",
        "contracts"
    ],
    "exclude": [
        "node_modules",
        ".next"
    ]
}